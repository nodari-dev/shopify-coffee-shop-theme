<!-- /snippets/social-sharing.liquid -->
{% if template.name == "product" %}
  <div class="social-sharing-product row start vertical-center">
    <p>Share product:</p>
    {% if settings.share_facebook %}
      <a class="center-all" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
        {% include 'icon-facebook' %}
      </a>
    {% endif %}
    {% if settings.share_twitter %}
      <a class="center-all" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
        {% include 'icon-twitter' %}
      </a>
    {% endif %}
    {% if settings.share_pinterest %}
      <a class="center-all" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
        {% include 'icon-pinterest' %}
      </a>
    {% endif %}
  </div>

{% else %}
  <div class="social-sharing white-bg column center-all radius-all">
    {% if settings.share_facebook %}
      <a class="center-all" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
        {% include 'icon-facebook' %}
      </a>
    {% endif %}
    {% if settings.share_twitter %}
      <a class="center-all" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
        {% include 'icon-twitter' %}
      </a>
    {% endif %}
    {% if settings.share_pinterest %}
      <a class="center-all" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
        {% include 'icon-pinterest' %}
      </a>
    {% endif %}
  </div>
{% endif %}
