
<div class="container-full margin-top-100 white-bg blog">
  {%- assign blog_title = blog.title -%}
  <div class="container margin-45 three-per-row">
    {% paginate blog.articles by 12 %}
        {% for article in blog.articles %}
        {% if article.image %}
          <div class="blog-block grid-el row radius-all" style="background-image: url({{ article.image | img_url: 'master' }}">
        {% else %}
          <div class="blog-block grid-el row radius-all" style="background-image: url({{ 'blog.jpg' | asset_url' }}">
        {% endif %}
          <div class="description padding-2vw column horizontal-center">
            <h2>{{ article.title | strip_html | truncatewords: 15}}</h2>
            <p>{{ article.content | strip_html | truncatewords: 30 }}</p>
            <a href="{{ article.url }}" class="link-dark">Read more</a>
          </div>
          {% if article.image %}
            <div class="media" style="background-image: url({{ article.image | img_url: 'master' }}">
          {% else %}
            <div class="media" style="background-image: url({{ 'blog.jpg' | asset_url }}">
          {% endif %}
          </div>
          <div class="dark-image-bg radius-all"></div>
          <a class="" href="{{ article.url }}"></a>
      </div>
      {% endfor %}
      <div class="container padding-none">
        {% if paginate.pages > 1 %}
        {% include 'pagination' %}
      {% endif %}
      </div>
    {% endpaginate %}
  </div>
</div>
