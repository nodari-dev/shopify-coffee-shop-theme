<div class="container-full two-per-row-no-margin one-per-row-mobile auto margin-top-100 vertical-center">
  <div class="container grid-el margin-top-45">
    {% form 'contact' , class: 'contact-page one-per-row' %}
      {% if form.posted_successfully? %}
        <h4 class="form-success margin-45">
          {{ 'contact.form.post_success' | t }}
        </h4>
      {% endif %}
      {{ form.errors | default_errors }}
        <input type="text"
          class="grid-el"
          name="contact[name]"
          id="ContactFormName"
          placeholder="{{ 'contact.form.name' | t }}"
          value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
        <input type="email"
          class="grid-el"
          name="contact[email]"
          id="ContactFormEmail"
          placeholder="{{ 'contact.form.email' | t }}"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">
        <input type="tel"
          class="grid-el"
          name="contact[phone]"
          id="ContactFormPhone"
          placeholder="{{ 'contact.form.phone' | t }}"
          value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          pattern="[0-9\-]*">
        <textarea rows="10"
        class="grid-el"
        name="contact[body]"
        id="ContactFormMessage"
        placeholder="{{ 'contact.form.message' | t }}">
        {%- if form.body -%}
          {{- form.body -}}
        {%- endif -%}
      </textarea>

      <button type="submit" class="dark-style radius-all">{{ 'contact.form.send' | t }}</button>

    {% endform %}
  </div>
  <div class="container grid-el">
    <h1 class="margin-top-30">{{ page.title }}</h1>
    {{ page.content }}
    <a href="/collections/all" class="link-dark">Keep shopping</a>
  </div>
</div>
<div class="container-full">
