<div class="container-full row full-height-nav dark-bg" style="background-image: url({{ section.settings.header_block_bg | img_url: 'master' }}); background-position:{{ section.settings.header_block_bg_pos }};">
  {% assign products = collections.all.products | sort: 'published_at' | reverse %}
  {% for product in products limit:1 %}
    <div class="container header-message vertical-center">
        <img src="{{ section.settings.header_message_image | img_url: 'master' }}" alt="">
        <div class="text">
          <h1 class="big">Welcome<br>to<br>{{ shop.name }}</h1>
          <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusantium quod recusandae, rem earum perspiciatis ad molestiae ratione? Dolore aliquid quo saepe laudantium ea, eos ab fugiat voluptatibus nobis numquam. Ipsam.</p>
          <a href="#" class="link-light">Read more</a>
        </div>
      </div>
    <div class="dark-image-bg"></div>
{% endfor %}
    <!-- <video class="header-video" autoplay muted loop id="header-video">
        <source src="https://cdn.shopify.com/s/files/1/0469/8485/5706/files/video.mp4?v=1598960652" type="video/mp4">
    </video> -->
</div>
{% schema %}
{
  "name": "Big header block",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_block_bg",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "header_block_bg_pos",
      "label": "Image alignment",
      "default": "center",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "header_message_image",
      "label": "Image for message"
    }
  ]
}
{% endschema %}